@model DentistApp.ViewModels.LoginViewModel;

@{
    ViewBag.Title = "Login Page";
}

<div class="d-flex justify-content-center w-100">
    <di class="d-flex flex-column  border w-50 p-4">
        <div class="form-text"><h5>Login</h5> </div>
        <form method="post" asp-controller="Account" asp-action="Login">

            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label">Email address</label>
                <input asp-for="@Model.Email" type="email" class="form-control">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Password" class="form-label">Password</label>
                <input asp-for="@Model.Password" type="password" class="form-control">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">

                <label asp-for="@Model.RememberMe" class="form-check-label">
                    <input asp-for="@Model.RememberMe" type="checkbox" class="form-check-input">
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="submit" class="btn btn-primary" value="Login">
        </form>
</div>
