@model List<RolesViewModel>;

@{
    ViewBag.Title = "Role Management";
}
<div class="d-flex justify-content-center" style="width:100%;height:auto">
    @if (Model.Any())
    {
        <div class="card" style="width:90%;">
            <div class="card-header">
                <h4>All Roles</h4>
            </div>
            <div class="card-body m-0 p-0">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th scope="col">Role Name</th>
                            <th scope="col">User Name </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <th style="vertical-align: unset;" scope="row">@role.RoleName</th>
                                <td class="p-0 m-0" style="vertical-align: unset;">
                                    @foreach (var user in role.Users)
                                    {
                                        <p class="p-0 m-0">@user.Name</p>
                                    }
                                </td>
                                <td class="d-flex justify-content-end align-content-center">
                                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic outlined example">                                        
                                        <a type="button" asp-controller="Administration" asp-action="UpdateRole" asp-route-Id="@role.RoleId" class="btn btn-outline-warning">Update</a>
                                        <a type="button" asp-controller="Administration" asp-action="DeleteRole" asp-route-Id="@role.RoleId" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="card-footer"><a class="btn btn-success" asp-controller="Administration" asp-action="CreateRole">Add Role</a></div>
        </div>
    }
    else
    {
        <div class="card w-75">
            <div class="card-header">
                <h4>All Roles</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title text-primary"></h5>
                <p class="card-text">Doesn't have any Roles yet!</p>
            </div>
            <div class="card-footer">
                <a class="btn btn-success" asp-controller="Administration" asp-action="CreateRole">Add Role</a>
            </div>
        </div>

    }
</div>